{% extends 'base.html.twig' %}

{% block body %}
    hello
    <hr/>
    {{ form_start(myForm) }}

    {{ form_errors(myForm) }}

    <div class="form-group {% if not myForm.title.vars.valid %}has-error{% endif %}">
        {{ form_label(myForm.title) }}
        <div class="col-sm-10">
            {{ form_widget(myForm.title) }}
            {{ form_errors(myForm.title) }}
        </div>
    </div>

    <div class="form-group {% if not myForm.email.vars.valid %}has-error{% endif %}">
        {{ form_label(myForm.email, 'my email') }}
        <div class="col-sm-10">
            {{ form_widget(myForm.email, {'attr': {'class': 'input-lg'} }) }}
            {{ form_errors(myForm.email) }}
        </div>
    </div>

    {{ form_end(myForm) }}
{% endblock %}